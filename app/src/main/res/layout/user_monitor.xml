<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="120">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView
            android:id="@+id/floating_heart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:adjustViewBounds="true"
            android:maxHeight="512px"
            android:maxWidth="512px"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_monitor_heart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvClickRunningMan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Click on running man icon to start your exercise."
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/btnEnterParams"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="60"
            android:background="@color/lightgrey2"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_fast_running_man_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="200"
            android:layout_weight="40"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:text="Heart Rate:"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/floating_text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:hint="Heart Rate"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:text="GSR:"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/floating_gsr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:hint="GSR"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:text="Age:"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/floating_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:hint="Age"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:text="Exercise intensity:"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/floating_intensity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:text="Intensity"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:text="Steps:"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/tvSteps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="5dp"
                android:text="Steps"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>